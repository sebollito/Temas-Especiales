    <fragment
        android:id="@+id/nav_home"
        android:name="com.pucmm.loginandmainpage.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.pucmm.loginandmainpage.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.pucmm.loginandmainpage.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.pucmm.loginandmainpage.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <activity
